{
    "expo": {
        "name": "OnaAseyori",
        "slug": "onaaseyori",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#4F46E5"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.onaaseyori.app",
            "infoPlist": {
                "NSCameraUsageDescription": "This app uses the camera for profile photos and document scanning.",
                "NSPhotoLibraryUsageDescription": "This app accesses your photos for profile pictures.",
                "NSFaceIDUsageDescription": "Use Face ID to securely log in."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#4F46E5"
            },
            "package": "com.onaaseyori.app",
            "permissions": [
                "CAMERA",
                "READ_EXTERNAL_STORAGE",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT"
            ]
        },
        "plugins": [
            "expo-camera",
            "expo-image-picker",
            "expo-local-authentication",
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#4F46E5"
                }
            ]
        ],
        "extra": {
            "apiUrl": "https://api.onaaseyori.com"
        }
    }
}
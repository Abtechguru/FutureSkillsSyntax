# FutureSkillsSyntax Backend Environment Variables
# Copy this to .env and fill in your values

# ============== Application ==============
APP_NAME=FutureSkillsSyntax
VERSION=1.0.0
ENVIRONMENT=development  # development | staging | production
DEBUG=true               # Set to false in production
API_V1_STR=/api/v1

# ============== Security ==============
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============== Database ==============
# For local Supabase
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54322/postgres

# For production Supabase (get from Supabase Dashboard > Settings > Database)
# DATABASE_URL=postgresql+asyncpg://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ============== Supabase ==============
# Get from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Keep this secret!

# ============== Redis (Optional) ==============
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ============== CORS ==============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============== Email (SMTP) ==============
# For development, leave empty to skip sending
# For production, use your SMTP provider (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@futureskillssyntax.com
EMAIL_FROM_NAME=FutureSkillsSyntax

# ============== Gamification ==============
INITIAL_XP=100
XP_PER_MODULE=50
XP_PER_SESSION=100
XP_PER_BADGE=200
# XP thresholds for each level (JSON array)
LEVEL_THRESHOLDS=[100,300,600,1000,1500,2200,3000,4000,5000]

# ============== Rate Limiting ==============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============== File Uploads ==============
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ============== AWS (Optional - for S3 storage fallback) ==============
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=futureskills-assets

# ============== Monitoring (Optional) ==============
SENTRY_DSN=
